<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartPageFragment">

    <RelativeLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/robot_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF8033"
                android:layout_weight="1">

                <View
                    android:id="@+id/robot_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/robot"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/robot"
                    android:rotation="90" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/human_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00CC0F"
                android:layout_weight="1">

                <View
                    android:id="@+id/human_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/human"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:scaleX="-1"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/human"
                    android:rotation="90" />


            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:rotation="90"
            android:text="Who goes first?"
            android:textSize="24sp" />

        <Button
            android:id="@+id/random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:rotation="90"
            android:textColor="@color/white"
            android:background="@drawable/random_button"
            android:text="Random" />

        <TextView
            android:id="@+id/robot_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:rotation="90"
            android:text="Computer"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/human_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="170dp"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:rotation="90"
            android:text="You"
            android:textSize="20sp" />

    </RelativeLayout>
</FrameLayout>